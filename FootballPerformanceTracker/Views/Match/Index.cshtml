@model IEnumerable<FootballTrackerData.Models.Match>

@{
    ViewData["Title"] = "Matches";
    var teamId = ViewBag.TeamId ?? 0;
}

<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-calendar-event me-2"></i>Match Management</h1>
            <p>View and manage all team matches</p>
        </div>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addMatchModal" data-testid="add-match-btn">
            <i class="bi bi-plus-circle me-2"></i>Add Match
        </button>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4 fade-in">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <select class="form-select" id="filterStatus" data-testid="filter-status">
                    <option value="all">All Matches</option>
                    <option value="upcoming">Upcoming</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="filterLocation" data-testid="filter-location">
                    <option value="all">All Locations</option>
                    <option value="home">Home</option>
                    <option value="away">Away</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="searchOpponent" placeholder="Search opponent..." data-testid="search-opponent">
            </div>
            <div class="col-md-3">
                <button class="btn btn-secondary w-100" data-testid="clear-filters-btn">
                    <i class="bi bi-x-circle me-2"></i>Clear Filters
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Matches Table -->
<div class="card fade-in">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Match Schedule</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Opponent</th>
                        <th>Location</th>
                        <th>Result</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody data-testid="matches-table-body">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var match in Model.OrderByDescending(m => m.Date))
                        {
                            <tr>
                                <td>
                                    <strong>@match.Date.ToString("MMM dd, yyyy")</strong>
                                </td>
                                <td>vs @match.Opponent</td>
                                <td>
                                    @if (match.isHomeMatch)
                                    {
                                        <span class="badge badge-info" data-testid="match-location-@match.MatchId">Home</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning" data-testid="match-location-@match.MatchId">Away</span>
                                    }
                                </td>
                                <td>
                                    @if (match.TeamGoals.HasValue && match.OpponentGoals.HasValue)
                                    {
                                        var result = match.TeamGoals.Value > match.OpponentGoals.Value ? "Won" :
                                        match.TeamGoals.Value < match.OpponentGoals.Value ? "Lost" : "Draw";
                                        var badgeClass = result == "Won" ? "badge-success" :
                                        result == "Lost" ? "badge-danger" : "badge-warning";
                                        <span class="badge @badgeClass" data-testid="match-result-@match.MatchId">
                                            @result @match.TeamGoals - @match.OpponentGoals
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted" data-testid="match-result-@match.MatchId">-</span>
                                    }
                                </td>
                                <td>
                                    @if (match.TeamGoals.HasValue && match.OpponentGoals.HasValue)
                                    {
                                        <span class="badge badge-success" data-testid="match-status-@match.MatchId">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info" data-testid="match-status-@match.MatchId">Upcoming</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Match" asp-action="Details" asp-route-id="@match.MatchId"
                                           class="btn btn-sm btn-primary" data-testid="view-match-@match.MatchId">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (!match.TeamGoals.HasValue)
                                        {
                                            <a asp-controller="PlayerPerformances" asp-action="EnterForMatch" asp-route-matchId="@match.MatchId"
                                               class="btn btn-sm btn-success" data-testid="enter-ratings-@match.MatchId">
                                                <i class="bi bi-pencil"></i> Enter Ratings
                                            </a>
                                        }
                                        <button class="btn btn-sm btn-danger" data-testid="delete-match-@match.MatchId">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                    <p class="mt-3">No matches found. Add your first match to get started!</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Match Stats -->
<div class="row g-4 mt-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-calendar-check"></i></div>
            <div class="stat-value" data-testid="total-matches">@(Model?.Count() ?? 0)</div>
            <div class="stat-label">Total Matches</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-trophy"></i></div>
            <div class="stat-value text-success" data-testid="wins">@(Model?.Count(m => m.TeamGoals > m.OpponentGoals) ?? 0)</div>
            <div class="stat-label">Wins</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-dash-circle"></i></div>
            <div class="stat-value text-warning" data-testid="draws">@(Model?.Count(m => m.TeamGoals == m.OpponentGoals) ?? 0)</div>
            <div class="stat-label">Draws</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-x-circle"></i></div>
            <div class="stat-value text-danger" data-testid="losses">@(Model?.Count(m => m.TeamGoals < m.OpponentGoals) ?? 0)</div>
            <div class="stat-label">Losses</div>
        </div>
    </div>
</div>

<!-- Add Match Modal -->
<div class="modal fade" id="addMatchModal" tabindex="-1" aria-labelledby="addMatchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMatchModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add New Match
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Match" asp-action="Create" method="post">
                <div class="modal-body">
                    <input type="hidden" name="teamId" value="@teamId" />
                    <div class="mb-3">
                        <label for="opponent" class="form-label">Opponent</label>
                        <input type="text" class="form-control" id="opponent" name="opponent"
                               placeholder="e.g., Tigers FC" required data-testid="opponent-input">
                    </div>
                    <div class="mb-3">
                        <label for="matchDate" class="form-label">Match Date</label>
                        <input type="date" class="form-control" id="matchDate" name="date" required data-testid="date-input">
                    </div>
                    <div class="mb-3">
                        <label for="isHomeMatch" class="form-label">Location</label>
                        <select class="form-select" id="isHomeMatch" name="isHomeMatch" required data-testid="location-select">
                            <option value="true">Home</option>
                            <option value="false">Away</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" data-testid="save-match-btn">
                        <i class="bi bi-check-circle me-2"></i>Add Match
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>