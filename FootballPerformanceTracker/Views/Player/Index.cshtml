@model IEnumerable<FootballTrackerData.Models.Player>

@{
    ViewData["Title"] = "Players";
    var teamId = ViewBag.TeamId ?? 0;
}

<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-people me-2"></i>Squad Management</h1>
            <p>Manage your team's player roster and view individual stats</p>
        </div>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addPlayerModal" data-testid="add-player-btn">
            <i class="bi bi-plus-circle me-2"></i>Add Player
        </button>
    </div>
</div>

<!-- Players Table -->
<div class="card fade-in">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Player Roster</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Age</th>
                        <th>Status</th>
                        <th>Avg Rating</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody data-testid="players-table-body">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var player in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@player.Name</strong>
                                </td>
                                <td>
                                    <span class="badge badge-info">@player.Position</span>
                                </td>
                                <td>@player.Age</td>
                                <td>
                                    @if (player.IsInjured)
                                    {
                                        <span class="badge badge-danger" data-testid="player-status-@player.PlayerId">Injured</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success" data-testid="player-status-@player.PlayerId">Available</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-accent" style="font-weight: 600;">7.5</span> / 10
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Player" asp-action="Details" asp-route-id="@player.PlayerId"
                                           class="btn btn-sm btn-primary" data-testid="view-player-@player.PlayerId">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <button class="btn btn-sm btn-secondary" data-testid="edit-player-@player.PlayerId">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-danger" data-testid="delete-player-@player.PlayerId">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                    <p class="mt-3">No players found. Add your first player to get started!</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-4 mt-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-people"></i></div>
            <div class="stat-value" data-testid="total-players">@(Model?.Count() ?? 0)</div>
            <div class="stat-label">Total Players</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-person-check"></i></div>
            <div class="stat-value text-success" data-testid="available-players">@(Model?.Count(p => !p.IsInjured) ?? 0)</div>
            <div class="stat-label">Available</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-person-x"></i></div>
            <div class="stat-value text-danger" data-testid="injured-players">@(Model?.Count(p => p.IsInjured) ?? 0)</div>
            <div class="stat-label">Injured</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-calculator"></i></div>
            <div class="stat-value" data-testid="avg-age">@(Model?.Any() == true ? Model.Average(p => p.Age).ToString("F1") : "0")</div>
            <div class="stat-label">Average Age</div>
        </div>
    </div>
</div>

<!-- Add Player Modal -->
<div class="modal fade" id="addPlayerModal" tabindex="-1" aria-labelledby="addPlayerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPlayerModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add New Player
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Player" asp-action="Create" method="post">
                <div class="modal-body">
                    <input type="hidden" name="teamId" value="@teamId" />
                    <div class="mb-3">
                        <label for="playerName" class="form-label">Player Name</label>
                        <input type="text" class="form-control" id="playerName" name="name"
                               placeholder="e.g., John Doe" required data-testid="player-name-input">
                    </div>
                    <div class="mb-3">
                        <label for="position" class="form-label">Position</label>
                        <select class="form-select" id="position" name="position" required data-testid="position-select">
                            <option value="" disabled selected>Select position...</option>
                            <option value="GK">Goalkeeper (GK)</option>
                            <option value="LB">Left Back (LB)</option>
                            <option value="CB">Center Back (CB)</option>
                            <option value="RB">Right Back (RB)</option>
                            <option value="LM">Left Midfield (LM)</option>
                            <option value="CM">Center Midfield (CM)</option>
                            <option value="RM">Right Midfield (RM)</option>
                            <option value="LW">Left Wing (LW)</option>
                            <option value="ST">Striker (ST)</option>
                            <option value="RW">Right Wing (RW)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" class="form-control" id="age" name="age"
                               min="10" max="50" required data-testid="age-input">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isInjured" name="isInjured" data-testid="injured-checkbox">
                        <label class="form-check-label" for="isInjured">
                            Currently Injured
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" data-testid="save-player-btn">
                        <i class="bi bi-check-circle me-2"></i>Add Player
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>