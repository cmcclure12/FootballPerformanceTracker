@model IEnumerable<FootballTrackerData.Models.Team>

@{
    ViewData["Title"] = "Team Selection";
}

<div class="hero-section fade-in">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="hero-title">
                    <span class="accent">⚽</span> Football Performance <span class="accent">Tracker</span>
                </h1>
                <p class="hero-subtitle">
                    Select a team to start tracking performance, analyzing stats, and managing your squad
                </p>

                <div class="team-selector">
                    <div class="card">
                        <div class="card-body p-4">
                            <h4 class="text-center mb-4" style="color: var(--accent-blue);">
                                <i class="bi bi-trophy me-2"></i>Select Your Team
                            </h4>

                            <form asp-controller="Home" asp-action="Dashboard" method="get">
                                <div class="mb-4">
                                    <select class="form-select form-select-lg" name="teamId" id="teamSelect" required data-testid="team-select">
                                        <option value="" selected disabled>Choose a team...</option>
                                        @if (Model != null && Model.Any())
                                        {
                                            @foreach (var team in Model)
                                            {
                                                <option value="@team.TeamId">@team.TeamName</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="" disabled>No teams available</option>
                                        }
                                    </select>
                                </div>

                                <div class="d-grid gap-3">
                                    <button type="submit" class="btn btn-primary btn-lg" data-testid="manage-team-btn">
                                        <i class="bi bi-arrow-right-circle me-2"></i>Manage Team
                                    </button>
                                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addTeamModal" data-testid="add-team-btn">
                                        <i class="bi bi-plus-circle me-2"></i>Add New Team
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <p class="text-muted">
                            <i class="bi bi-info-circle me-2"></i>
                            Track matches, monitor player performance, and gain insights
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Team Modal -->
<div class="modal fade" id="addTeamModal" tabindex="-1" aria-labelledby="addTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTeamModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add New Team
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" data-testid="close-modal-btn"></button>
            </div>
            <form asp-controller="Home" asp-action="CreateTeam" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="teamName" class="form-label">Team Name</label>
                        <input type="text" class="form-control" id="teamName" name="teamName"
                               placeholder="e.g., U15C Team" required data-testid="team-name-input">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-testid="cancel-btn">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-success" data-testid="save-team-btn">
                        <i class="bi bi-check-circle me-2"></i>Create Team
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('teamSelect')?.addEventListener('change', function() {
            this.style.borderColor = 'var(--accent-blue)';
        });
    </script>
}